<Window x:Class="darks.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DarkStore Workspace" Height="800" Width="1300"
        WindowStartupLocation="CenterScreen" 
        Background="{StaticResource BackgroundBrush}">

    <Window.Resources>
        <!-- Page Entrance Animation -->
        <Storyboard x:Key="PageEntranceAnimation">
            <DoubleAnimation Storyboard.TargetName="MainContent"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Notification Badge Style -->
        <Style x:Key="NotificationBadge" TargetType="Border">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="MinWidth" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Padding" Value="4,0"/>
        </Style>
        
        <!-- Icon Button Style -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="IconBorder" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="12"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="IconBorder" Property="Background" Value="#F1F5F9"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="IconBorder" Property="Background" Value="#E2E8F0"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Search Box Style -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,0,48,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="14"
                                Height="48">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" 
                                                  BlurRadius="20" 
                                                  ShadowDepth="4" 
                                                  Opacity="0.08"
                                                  Direction="270"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource PageEntranceAnimation}"/>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- SIDEBAR - Modern Dark Design                                                      -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Border Grid.Column="0" Margin="16,16,0,16" CornerRadius="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1E1B4B" Offset="0"/>
                    <GradientStop Color="#312E81" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#1E1B4B" BlurRadius="30" ShadowDepth="8" Opacity="0.4"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo Section -->
                <StackPanel Grid.Row="0" Margin="24,32,24,24">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="42" Height="42" CornerRadius="12" Margin="0,0,14,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#4F46E5" Offset="0"/>
                                    <GradientStop Color="#7C3AED" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="D" 
                                       Foreground="White" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="DARKSTORE" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                            <TextBlock Text="Workspace" 
                                       FontSize="11" 
                                       Foreground="#A5B4FC"
                                       Margin="0,-2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <Border Height="1" Background="#FFFFFF" Opacity="0.1" Margin="0,24,0,0"/>
                </StackPanel>
                
                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="8,0">
                        <!-- Menu Section Label -->
                        <TextBlock Text="МЕНЮ" 
                                   Foreground="#6366F1" 
                                   FontSize="11" 
                                   FontWeight="SemiBold"
                                   Margin="20,8,0,12"
                                   Opacity="0.8"/>
                        
                        <Button x:Name="BtnNavDashboard" Style="{StaticResource NavBtn}" Click="Nav_Dashboard">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Дашборд" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="BtnNavOrders" Style="{StaticResource NavBtn}" Click="Nav_Orders">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Заказы" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="BtnNavDelivery" Style="{StaticResource NavBtn}" Click="Nav_Delivery">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚀" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Доставка" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="BtnNavMap" Style="{StaticResource NavBtn}" Click="Nav_Map">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗺" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Карта склада" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Section Divider -->
                        <Border Height="1" Background="#FFFFFF" Opacity="0.08" Margin="20,16"/>
                        
                        <TextBlock Text="УПРАВЛЕНИЕ" 
                                   Foreground="#6366F1" 
                                   FontSize="11" 
                                   FontWeight="SemiBold"
                                   Margin="20,0,0,12"
                                   Opacity="0.8"/>
                        
                        <Button x:Name="BtnNavProducts" Style="{StaticResource NavBtn}" Click="Nav_Products">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🍎" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Товары" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="BtnNavSupply" Style="{StaticResource NavBtn}" Click="Nav_Supply">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚚" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Поставки" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="BtnNavEmployees" Style="{StaticResource NavBtn}" Click="Nav_Employees">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Сотрудники" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="BtnNavShifts" Style="{StaticResource NavBtn}" Click="Nav_Shifts">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⏱" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Смены" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="BtnNavSettings" Style="{StaticResource NavBtn}" Click="Nav_Settings">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="18" Margin="0,0,14,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Настройки" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- User Profile Section -->
                <Border Grid.Row="2" Margin="16,0,16,20">
                    <Border Background="#312E81" CornerRadius="16" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- User Avatar -->
                            <Border Width="44" Height="44" CornerRadius="12" Margin="0,0,12,0">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#10B981" Offset="0"/>
                                        <GradientStop Color="#059669" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="👤" 
                                           FontSize="20"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            
                            <!-- User Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="TxtUser" 
                                           Text="User Name" 
                                           Foreground="White" 
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock x:Name="TxtRole" 
                                           Text="Role" 
                                           Foreground="#A5B4FC" 
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Logout Button -->
                    <Border.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Выйти из аккаунта" Click="Logout_Click"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                </Border>
                
                <!-- Logout Button Below User Card -->
                <Button Grid.Row="2" 
                        Margin="16,100,16,20" 
                        Click="Logout_Click"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="LogoutBorder" 
                                    Background="Transparent" 
                                    CornerRadius="12" 
                                    Padding="14,12"
                                    BorderThickness="1"
                                    BorderBrush="#EF4444"
                                    Opacity="0.8">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="🚪" FontSize="14" Margin="0,0,10,0"/>
                                    <TextBlock Text="Выйти" 
                                               Foreground="#EF4444" 
                                               FontWeight="SemiBold"
                                               FontSize="13"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="LogoutBorder" Property="Background" Value="#EF4444"/>
                                    <Setter TargetName="LogoutBorder" Property="Opacity" Value="1"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- MAIN CONTENT AREA                                                                 -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Grid x:Name="MainContent" Grid.Column="1" Opacity="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Top Bar -->
            <Grid Grid.Row="0" Margin="24,24,32,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Search Bar - Spotlight Style -->
                <Grid Width="420" HorizontalAlignment="Left">
                    <TextBox x:Name="TxtGlobalSearch" 
                             Style="{StaticResource SearchBox}"
                             ToolTip="Введите номер заказа или название товара и нажмите Enter"
                             KeyDown="TxtGlobalSearch_KeyDown"/>
                    <TextBlock Text="🔍" 
                               FontSize="16"
                               Foreground="#94A3B8"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="18,0,0,0"
                               IsHitTestVisible="False"/>
                    <TextBlock Text="Поиск заказов и товаров..."
                               Foreground="#CBD5E1"
                               FontSize="14"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="48,0,0,0"
                               IsHitTestVisible="False"
                               Opacity="0.8">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text.Length, ElementName=TxtGlobalSearch, FallbackValue=0}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
                
                <!-- Right Side Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Notification Button -->
                    <Grid>
                        <Button x:Name="BtnNotif" 
                                Style="{StaticResource IconButton}"
                                Click="BtnNotif_Click">
                            <TextBlock Text="🔔" FontSize="20"/>
                        </Button>
                        
                        <!-- Notification Badge -->
                        <Border Style="{StaticResource NotificationBadge}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,4,4,0"
                                Visibility="Collapsed">
                            <TextBlock Text="3" 
                                       Foreground="White" 
                                       FontSize="10" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </Border>
                        
                        <!-- Notification Popup -->
                        <Popup x:Name="PopNotif" 
                               PlacementTarget="{Binding ElementName=BtnNotif}" 
                               Placement="Bottom" 
                               StaysOpen="False" 
                               AllowsTransparency="True"
                               PopupAnimation="Fade">
                            <Border Background="White" 
                                    CornerRadius="16" 
                                    Width="360" 
                                    MaxHeight="420"
                                    Margin="8">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" 
                                                      BlurRadius="30" 
                                                      ShadowDepth="8" 
                                                      Opacity="0.15"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Header -->
                                    <Border Grid.Row="0" 
                                            BorderBrush="#F1F5F9" 
                                            BorderThickness="0,0,0,1"
                                            Padding="20,16">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="🔔" FontSize="18" Margin="0,0,10,0"/>
                                            <TextBlock Text="Уведомления" 
                                                       FontWeight="Bold" 
                                                       FontSize="16"
                                                       Foreground="#1E293B"/>
                                        </StackPanel>
                                    </Border>
                                    
                                    <!-- Notifications List -->
                                    <ListView x:Name="ListNotifs" 
                                              Grid.Row="1" 
                                              BorderThickness="0"
                                              Padding="8,4,8,8">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Setter Property="Padding" Value="12"/>
                                                <Setter Property="Margin" Value="0,2"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListViewItem">
                                                            <Border x:Name="ItemBg" 
                                                                    Background="Transparent" 
                                                                    CornerRadius="10"
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter/>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="ItemBg" Property="Background" Value="#F8FAFC"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Title}" 
                                                               FontWeight="SemiBold" 
                                                               FontSize="13"
                                                               Foreground="#1E293B"/>
                                                    <TextBlock Text="{Binding Message}" 
                                                               FontSize="12" 
                                                               TextWrapping="Wrap" 
                                                               Foreground="#64748B"
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </Border>
                        </Popup>
                    </Grid>
                </StackPanel>
            </Grid>

            <!-- Page Content Frame -->
            <Frame x:Name="MainFrame" 
                   Grid.Row="1" 
                   NavigationUIVisibility="Hidden" 
                   Margin="8,0,16,16"/>
        </Grid>
    </Grid>
</Window>
