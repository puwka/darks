<Page x:Class="darks.Windows.DeliveryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Delivery" Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Page Entrance Animation -->
        <Storyboard x:Key="PageEntranceAnimation">
            <DoubleAnimation Storyboard.TargetName="PageContent"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>

    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard Storyboard="{StaticResource PageEntranceAnimation}"/>
        </EventTrigger>
    </Page.Triggers>

    <Grid x:Name="PageContent" Opacity="0" Background="#F4F7FC" Margin="16,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- TOP STATS BAR                                                                     -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Border Grid.ColumnSpan="2" 
                Background="White" 
                CornerRadius="20"
                Margin="0,0,16,20" 
                Padding="28,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="4" Opacity="0.06"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="48" Height="48" CornerRadius="14" Margin="0,0,16,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#4F46E5" Offset="0"/>
                                <GradientStop Color="#7C3AED" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock Text="🚀" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Курьерская панель" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="#1E293B"/>
                        <TextBlock Text="Управление доставками" 
                                   FontSize="12" 
                                   Foreground="#94A3B8"/>
                    </StackPanel>
                </StackPanel>

                <!-- Earnings Card -->
                <Border Grid.Column="2" 
                        CornerRadius="16" 
                        Padding="24,16"
                        Margin="0,0,16,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#10B981" Offset="0"/>
                            <GradientStop Color="#059669" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#10B981" BlurRadius="15" ShadowDepth="4" Opacity="0.25"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💰" FontSize="24" Margin="0,0,14,0" VerticalAlignment="Center"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Заработано сегодня" 
                                       Foreground="White" 
                                       FontSize="11"
                                       Opacity="0.9"/>
                            <TextBlock x:Name="TxtEarnings" 
                                       Text="0 ₽" 
                                       Foreground="White" 
                                       FontSize="20"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- On Way Card -->
                <Border Grid.Column="3" 
                        CornerRadius="16" 
                        Padding="24,16">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#F59E0B" Offset="0"/>
                            <GradientStop Color="#D97706" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#F59E0B" BlurRadius="15" ShadowDepth="4" Opacity="0.25"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🛵" FontSize="24" Margin="0,0,14,0" VerticalAlignment="Center"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="В пути" 
                                       Foreground="White" 
                                       FontSize="11"
                                       Opacity="0.9"/>
                            <TextBlock x:Name="TxtOnWay" 
                                       Text="0 заказов" 
                                       Foreground="White" 
                                       FontSize="20"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- LEFT PANEL - Orders List                                                          -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="1" 
                Grid.Column="0" 
                Margin="0,0,12,16" 
                Background="White" 
                CornerRadius="20" 
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="4" Opacity="0.06"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="📦" FontSize="18" Margin="0,0,10,0"/>
                    <TextBlock Text="Ожидают доставки" 
                               FontWeight="Bold" 
                               FontSize="16"
                               Foreground="#1E293B"/>
                </StackPanel>

                <ListView x:Name="ListReady" 
                          Grid.Row="1" 
                          BorderThickness="0"
                          Background="Transparent"
                          SelectionChanged="ListReady_SelectionChanged">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,0,0,12"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    BorderBrush="#E2E8F0" 
                                    BorderThickness="1.5" 
                                    CornerRadius="16" 
                                    Padding="18"
                                    Cursor="Hand">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.04"/>
                                </Border.Effect>
                                <StackPanel>
                                    <Grid Margin="0,0,0,10">
                                        <TextBlock Text="{Binding Id, StringFormat='Заказ #{0}'}" 
                                                   FontWeight="Bold" 
                                                   FontSize="16"
                                                   Foreground="#1E293B"/>
                                        <Border HorizontalAlignment="Right" 
                                                CornerRadius="8" 
                                                Padding="10,5">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#06B6D4" Offset="0"/>
                                                    <GradientStop Color="#0891B2" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <TextBlock Text="{Binding Status}" 
                                                       FontSize="10" 
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                        <TextBlock Text="📍" FontSize="12" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Address}" 
                                                   TextWrapping="Wrap" 
                                                   Foreground="#1E293B"
                                                   FontSize="13"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="👤" FontSize="12" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding ClientName}" 
                                                   FontSize="12" 
                                                   Foreground="#64748B"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>

        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <!-- RIGHT PANEL - Map & Details                                                       -->
        <!-- ═══════════════════════════════════════════════════════════════════════════════ -->
        <Border Grid.Row="1" 
                Grid.Column="1" 
                Margin="4,0,16,16" 
                CornerRadius="20"
                ClipToBounds="True">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E293B" Offset="0"/>
                    <GradientStop Color="#334155" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="25" ShadowDepth="6" Opacity="0.1"/>
            </Border.Effect>
            
            <Grid>
                <!-- Active Delivery Panel -->
                <Grid x:Name="ActivePanel" Visibility="Hidden">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Map Area -->
                    <Grid ClipToBounds="True">
                        <!-- Map Background Image -->
                        <Image Source="https://static.vecteezy.com/system/resources/previews/000/549/322/original/vector-abstract-city-map-seamless-pattern.jpg" 
                               Stretch="UniformToFill" 
                               Opacity="0.15"/>
                        
                        <!-- Canvas for Route Drawing -->
                        <Canvas x:Name="MapCanvas"/>
                        
                        <!-- GPS Header Badge -->
                        <Border VerticalAlignment="Top" 
                                HorizontalAlignment="Left" 
                                Margin="24,24"
                                CornerRadius="12" 
                                Padding="16,10">
                            <Border.Background>
                                <SolidColorBrush Color="White" Opacity="0.95"/>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.15"/>
                            </Border.Effect>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="10" Height="10" Fill="#10B981" Margin="0,0,10,0"/>
                                <TextBlock Text="Маршрут построен" 
                                           FontWeight="Bold" 
                                           FontSize="13"
                                           Foreground="#10B981"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- GPS Coordinates (decorative) -->
                        <Border VerticalAlignment="Top" 
                                HorizontalAlignment="Right" 
                                Margin="24"
                                CornerRadius="10" 
                                Padding="14,8">
                            <Border.Background>
                                <SolidColorBrush Color="Black" Opacity="0.6"/>
                            </Border.Background>
                            <TextBlock Text="55.7558° N, 37.6173° E" 
                                       Foreground="White" 
                                       FontSize="11"
                                       FontFamily="Consolas"/>
                        </Border>
                    </Grid>

                    <!-- Bottom Control Panel -->
                    <Border Grid.Row="1" 
                            Background="White" 
                            CornerRadius="24,24,0,0"
                            Padding="32,28">
                        <Border.Effect>
                            <DropShadowEffect Direction="90" 
                                              Color="Black"
                                              BlurRadius="30" 
                                              ShadowDepth="0"
                                              Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel>
                            <!-- Target Address -->
                            <Grid Margin="0,0,0,24">
                                <StackPanel>
                                    <TextBlock Text="📍 Текущая цель" 
                                               Foreground="#64748B" 
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,8"/>
                                    <TextBlock x:Name="TxtTargetAddress" 
                                               Text="ул. Пушкина, д. 10" 
                                               FontSize="22" 
                                               FontWeight="Bold" 
                                               Foreground="#1E293B"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                                
                                <!-- Call Button -->
                                <Button HorizontalAlignment="Right" 
                                        VerticalAlignment="Top"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="CallBorder"
                                                    CornerRadius="12"
                                                    Padding="18,10">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#06B6D4" Offset="0"/>
                                                        <GradientStop Color="#0891B2" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#06B6D4" BlurRadius="12" ShadowDepth="3" Opacity="0.3"/>
                                                </Border.Effect>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="📞" FontSize="14" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Позвонить" 
                                                               Foreground="White" 
                                                               FontWeight="SemiBold"
                                                               FontSize="12"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="CallBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#06B6D4" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                            <!-- Action Buttons -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Start Delivery Button -->
                                <Button x:Name="BtnStart" 
                                        Click="BtnStart_Click"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="StartBorder"
                                                    CornerRadius="16"
                                                    Height="60">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#F59E0B" Offset="0"/>
                                                        <GradientStop Color="#D97706" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#F59E0B" BlurRadius="18" ShadowDepth="5" Opacity="0.35"/>
                                                </Border.Effect>
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="🚀" FontSize="18" Margin="0,0,10,0"/>
                                                    <TextBlock Text="Поехали" 
                                                               Foreground="White" 
                                                               FontWeight="Bold"
                                                               FontSize="16"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="StartBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#F59E0B" BlurRadius="28" ShadowDepth="8" Opacity="0.45"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- Finish Delivery Button -->
                                <Button x:Name="BtnFinish" 
                                        Grid.Column="2" 
                                        Visibility="Collapsed"
                                        Click="BtnFinish_Click"
                                        Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="FinishBorder"
                                                    CornerRadius="16"
                                                    Height="60">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#10B981" Offset="0"/>
                                                        <GradientStop Color="#059669" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#10B981" BlurRadius="18" ShadowDepth="5" Opacity="0.35"/>
                                                </Border.Effect>
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center">
                                                    <TextBlock Text="✅" FontSize="18" Margin="0,0,10,0"/>
                                                    <TextBlock Text="Доставлено" 
                                                               Foreground="White" 
                                                               FontWeight="Bold"
                                                               FontSize="16"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="FinishBorder" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#10B981" BlurRadius="28" ShadowDepth="8" Opacity="0.45"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Placeholder when no order selected -->
                <StackPanel x:Name="Placeholder" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center">
                    <Border Background="#334155" 
                            CornerRadius="24" 
                            Width="120" 
                            Height="120"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,24">
                        <TextBlock Text="🚚" 
                                   FontSize="50" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Выберите заказ для доставки" 
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#94A3B8"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Маршрут появится на карте" 
                               FontSize="14"
                               Foreground="#64748B"
                               HorizontalAlignment="Center"
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
